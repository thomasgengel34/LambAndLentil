 @model LambAndLentil.UI.Models.ListVM
@{
    ViewBag.Title = "Menu Index";
    string sourceActionMethod = "MenusIndex";
}

<h2>Menus</h2>

<p>
    @Html.ActionLink("Add Menu", LambAndLentil.UI.UIViewType.Create.ToString(), UIControllerType.Menus.ToString(), new { actionMethod = UIViewType.Create.ToString() }, null)

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Menus.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Menus.First().MealType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Menus.First().DayOfWeek)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Menus.First().Diners)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Menus) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MealType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DayOfWeek)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Diners)
        </td>
        <td>
            @Html.ActionLink(" ", UIViewType.Edit.ToString(), "Menus", new { id = item.ID, sourceActionMethod, actionMethod = UIViewType.Edit }, new { @class = "btn btn-default btn-sm  glyphicon glyphicon-edit", @title = "Edit" })
        </td>
        <td>
            @Html.ActionLink(" ", UIViewType.Details.ToString(), new { id = item.ID }, new { @class = "btn btn-default btn-sm  glyphicon glyphicon-list", @title = "Details" })
        </td>
        <td>
            @Html.ActionLink(" ", UIViewType.Details.ToString(), new
       {
           id = item.ID,
           actionMethod = UIViewType.Delete
       }, new { @class = "btn btn-default btn-sm  glyphicon glyphicon-trash", @title = "Delete" })
        </td>
    </tr>
}

</table>
</table>
<div class="pager">
    <h4>Lamb & Lentil</h4>
    @Html.PageLinks(Model.PagingInfo, x => Url.Action(UIViewType.Index.ToString(), new { page = x }))
</div>