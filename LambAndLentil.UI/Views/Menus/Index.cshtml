 @model LambAndLentil.UI.Models.ListVM
@{
    ViewBag.Title = "Menu Index";
}

<h2>Menus</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Menus.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Menus.First().MealType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Menus.First().Diners)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Menus) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MealType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Diners)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
