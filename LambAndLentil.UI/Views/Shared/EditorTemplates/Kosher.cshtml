@using LambAndLentil.Domain.Entities
@model LambAndLentil.Domain.Entities.Kosher
   @{
       string actionM = Request.AppRelativeCurrentExecutionFilePath.Split('/').Last();
       Kosher valueM = Kosher.Not;
       if (ViewData["valueM"] != null)
       {
           valueM = (Kosher)ViewData["valueM"];
       }
       string colon = " : ";
   }
 


@if (actionM == UIViewType.Edit.ToString() || actionM == UIViewType.Create.ToString())
{

    @Html.LabelFor(m => m)
     
    @Html.EnumDropDownListFor( m =>m, new { @class = "form-control" }  )

    @Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })


}
else
{ 
    @Html.DisplayNameFor(model => model) @colon @Html.Label(valueM.ToString()); 
}
