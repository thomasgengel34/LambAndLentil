 
<!DOCTYPE html>
<html> 
<head>
    <link rel="icon" href="~/Images/favicon.ico" type="image/x-icon" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Lamb and Lentil</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div id="navA" class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Lamb & Lentil", UIViewType.Index.ToString(), UIControllerType.Home.ToString(), new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul id="navB" class="nav navbar-nav">  
                    <li>@Html.ActionLink("Home", UIViewType.Index.ToString(), UIControllerType.Home.ToString())</li>
                    <li>@Html.ActionLink("About", UIViewType.About.ToString(), UIControllerType.Home.ToString())</li>
                     
                    <li>@Html.ActionLink("Ingredients", UIViewType.Index.ToString(), UIControllerType.Ingredients.ToString())</li>
                    <li>@Html.ActionLink("Recipes", UIViewType.Index.ToString(), UIControllerType.Recipes.ToString())</li>
                    <li>@Html.ActionLink("Menus", UIViewType.Index.ToString(), UIControllerType.Menus.ToString())</li>
                    <li>@Html.ActionLink("Plans", UIViewType.Index.ToString(), UIControllerType.Plans.ToString())</li>
                    <li>@Html.ActionLink("Shopping", UIViewType.Index.ToString(), UIControllerType.ShoppingLists.ToString())</li>
                    <li>@Html.ActionLink("People", UIViewType.Index.ToString(), UIControllerType.Persons.ToString())</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content"> 
        <div class="container alert-container"></div>
        @*@if(TempData["message"] != null)
        {
            <div class="Message">@TempData["message"] </div>
        }*@
       
            @RenderBody() 
    </div>
    <footer> 
        <p>
          &copy; @DateTime.Now.Year - Lamb & Lentil 
        <span><strong>Support:</strong>   <a href="mailto:Support@lamb&lentil.com">Support@lamb&lentil.com</a></span> </p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/app")
    @Html.Partial("_Alerts")
    @RenderSection("scripts", required: false)
</body>
</html>
