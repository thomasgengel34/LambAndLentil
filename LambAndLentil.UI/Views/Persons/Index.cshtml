@model LambAndLentil.UI.Models.ListVM

@{
    ViewBag.Title = "People Index";
}

<h2>Personal Profiles</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Persons.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persons.First().LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persons.First().Weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persons.First().MinCalories)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persons.First().MaxCalories)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persons.First().NoGarlic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persons.First().MustHaveGarlic)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Persons) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MinCalories)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxCalories)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoGarlic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MustHaveGarlic)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
