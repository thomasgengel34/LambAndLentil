 @model LambAndLentil.UI.Models.ListVM
@{
    ViewBag.Title = "ShoppingList Index";
    string sourceActionMethod = "ShoppingListsIndex";
}

<h2>ShoppingLists</h2>

<p>
    @Html.ActionLink("Add ShoppingList", LambAndLentil.UI.UIViewType.Create.ToString(), UIControllerType.ShoppingLists.ToString(), new { actionMethod = UIViewType.Create.ToString() }, null)

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShoppingLists.First().Name)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.ShoppingLists.First().Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShoppingLists.First().Author)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.ShoppingLists) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td> 
        <td>
            @Html.ActionLink(" ", UIViewType.Edit.ToString(), "ShoppingLists", new { id = item.ID, sourceActionMethod, actionMethod = UIViewType.Edit }, new { @class = "btn btn-default btn-sm  glyphicon glyphicon-edit", @title = "Edit" })
        </td>
        <td>
            @Html.ActionLink(" ", UIViewType.Details.ToString(), new { id = item.ID }, new { @class = "btn btn-default btn-sm  glyphicon glyphicon-list", @title = "Details" })
        </td>
        <td>
            @Html.ActionLink(" ", UIViewType.Details.ToString(), new
       {
           id = item.ID,
           actionMethod = UIViewType.Delete
       }, new { @class = "btn btn-default btn-sm  glyphicon glyphicon-trash", @title = "Delete" })
        </td>
    </tr>
}

</table> 
<div class="pager">
    <h4>Lamb & Lentil</h4>
    @Html.PageLinks(Model.PagingInfo, x => Url.Action(UIViewType.Index.ToString(), new { page = x }))
</div>