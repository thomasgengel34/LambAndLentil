@model IEnumerable<LambAndLentil.Domain.Entities.Recipe>

@{
    ViewBag.Title = "Index";
}

<h2>Recipes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Servings)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MealType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Calories)
        </th>
        <th></th>
    </tr>

@foreach (var recipe in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => recipe.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => recipe.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => recipe.Servings)
        </td>
        <td>
            @Html.DisplayFor(modelItem => recipe.MealType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => recipe.Calories)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=recipe.RecipeID }) |
            @Html.ActionLink("Details", "Details", new { id=recipe.RecipeID }) |
            @Html.ActionLink("Delete", "Delete", new { id=recipe.RecipeID })
        </td>
    </tr>
}

</table>
